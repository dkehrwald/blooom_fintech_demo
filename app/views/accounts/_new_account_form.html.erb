<div class="modal fade" id="new-account-modal" tabindex="-1">
	<div class="modal-dialog">
		<div class="modal-content">
  			<div class="modal-header">
    			<button type="button" class="close" data-dismiss="modal" aria-label="Close">
    				<span aria-hidden="true">&times;</span>
				</button>
    			<h4 class="modal-title">New Account</h4>
  			</div>
          <%= form_for :account, url: '/accounts', html: {class: 'form-horizontal'} do %>
          <input type="hidden" name="account[user_id]" value="<%= @user.id %>"/>
  			     <div class="modal-body">
              <!-- add Account Type-->
              <div class="form-group">
                <label for="inputText3" class="col-sm-2 control-label">Account Type</label>
                <div class="col-sm-10">
                  <select class="form-control acctType-form" name="account[account_type]" required>
                    <option>Investment</option>
                    <option>Cash</option>
                    <option>Debt</option>
                  </select>
                </div>
              </div>
              
              <!-- add Name-->
             <div class="form-group">
                <label for="inputText3" class="col-sm-2 control-label">Account Name</label>
                <div class="col-sm-10">
                  <input type="text" name="account[account_name]" class="form-control" id="inputText3" placeholder="Account Name" required>
                </div>
              </div>
              <!-- add Balance-->
              <div class="form-group">
                <label for="inputNumber3" class="col-sm-2 control-label">Account Balance</label>
                <div class="col-sm-10 input-group">
                  <div class="input-group-addon">$</div>
                  <input type="number" name="account[balance]" class="form-control" id="inputNumber3" placeholder="Account Balance" required>
                </div>
              </div>
               <!-- add holdings (if investment)-->
             <div class="form-group">
                <label for="inputText3" class="col-sm-2 control-label">Investment Holdings</label>
                <div class="col-sm-10">
                  <input type="text" name="account[holdings]" class="form-control investment_holdings_input" id="inputText3" placeholder="Holdings">
                </div>
              </div>
              <script>
                  $(".acctType-form").on('change', function(e) {
                      if(this.value !== "Investment") {
                        $(".investment_holdings_input").attr("disabled", true);
                      }
                      else {
                        $(".investment_holdings_input").attr("disabled", false);
                      }
                  });
              </script>
    			
    			</div>
    			<div class="modal-footer">
      			<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      			<button type="submit" class="btn btn-primary">Submit</button>
    			</div>
		</div><!-- /.modal-content -->
	</div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<% end -%>
